<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lcd.androidtestpractice.MainActivity"
    android:gravity="center_vertical"
    >

    <Button
        android:id="@+id/calc_act"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator Activity"
        android:layout_marginBottom="15dp"
        />

    <Button
        android:id="@+id/list_act"
        android:layout_below="@id/calc_act"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Activity"
        android:layout_marginBottom="15dp"

        />

    <Button
        android:id="@+id/dialer_act"
        android:layout_below="@id/list_act"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialer Activity"
        android:layout_marginBottom="15dp"

        />


</RelativeLayout>
